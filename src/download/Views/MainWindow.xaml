                <StackPanel
                    Height="30"
                    Margin="10,10,10,0"
                    Orientation="Horizontal"
                    Style="{StaticResource ResourceKey=StackPanelMouseOver}">
                    <materialDesign:PackIcon VerticalAlignment="Center" Kind="Play" />
                    <TextBlock
                        Margin="10,0"
                        VerticalAlignment="Center"
                        FontSize="14"
                        Text="进行中" />
                </StackPanel>
                <StackPanel
                    Height="30"
                    Margin="10,10,10,0"
                    Orientation="Horizontal"
                    Style="{StaticResource ResourceKey=StackPanelMouseOver}">
                    <materialDesign:PackIcon VerticalAlignment="Center" Kind="Pause" />
                    <TextBlock
                        Margin="10,0"
                        VerticalAlignment="Center"
                        FontSize="14"
                        Text="等待中" />
                </StackPanel>
                <StackPanel
                    Height="30"
                    Margin="10,10,10,0"
                    Orientation="Horizontal"
                    Style="{StaticResource ResourceKey=StackPanelMouseOver}">
                    <materialDesign:PackIcon VerticalAlignment="Center" Kind="Stop" />
                    <TextBlock
                        Margin="10,0"
                        VerticalAlignment="Center"
                        FontSize="14"
                        Text="已停止" />
                </StackPanel>
            </StackPanel>
        </Grid>
        <Grid Grid.Column="4">
            <Grid.RowDefinitions>
                <RowDefinition Height="30" />
                <RowDefinition Height="40" />
                <RowDefinition Height="10" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <StackPanel
                Grid.Row="0"
                HorizontalAlignment="Right"
                Orientation="Horizontal">
                <Button
                    Command="{Binding DelegateCommandWindowClose}"
                    CommandParameter="min"
                    Content="{materialDesign:PackIcon WindowMinimize}"
                    Style="{StaticResource WindowsButton}" />
                <Button
                    Command="{Binding DelegateCommandWindowClose}"
                    CommandParameter="max"
                    Content="{materialDesign:PackIcon WindowMaximize}"
                    Style="{StaticResource WindowsButton}" />
                <Button
                    Command="{Binding DelegateCommandWindowClose}"
                    CommandParameter="close"
                    Content="{materialDesign:PackIcon WindowClose}"
                    Style="{StaticResource WindowsCloseButton}" />
            </StackPanel>
            <DockPanel
                Grid.Row="1"
                Margin="0,10,40,0"
                LastChildFill="True">
                <TextBlock
                    DockPanel.Dock="Left"
                    FontSize="15"
                    Text="下载中" />
                <StackPanel
                    HorizontalAlignment="Right"
                    DockPanel.Dock="Right"
                    Orientation="Horizontal">
                    <Button
                        Content="{materialDesign:PackIcon WindowClose}"
                        Style="{StaticResource WindowsButton}"
                        ToolTip="移除选中的任务" />
                    <Button
                        Content="{materialDesign:PackIcon Refresh}"
                        Style="{StaticResource WindowsButton}"
                        ToolTip="刷新任务列表" />
                    <Button
                        Content="{materialDesign:PackIcon Play}"
                        Style="{StaticResource WindowsButton}"
                        ToolTip="恢复所有任务" />
                    <Button
                        Content="{materialDesign:PackIcon Pause}"
                        Style="{StaticResource WindowsButton}"
                        ToolTip="暂停所有任务" />
                </StackPanel>
            </DockPanel>
            <Border
                Grid.Row="2"
                Margin="0,0,50,0"
                VerticalAlignment="Center"
                BorderBrush="{DynamicResource MaterialDesignDivider}"
                BorderThickness="0,2,0,0" />
