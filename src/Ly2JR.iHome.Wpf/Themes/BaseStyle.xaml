<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:system="clr-namespace:System;assembly=mscorlib">
    <!--  外观二种主题,浅色(默认)，深色  -->

    <!--  遮罩层背景色  -->
    <Color x:Key="DialogBackgroundColor">#808080</Color>

    <!--  浅色(默认)  -->
    <Color x:Key="PrimaryForegroundColor">#303133</Color>
    <Color x:Key="PrimaryBackgroundColor">#FFFFFF</Color>

    <!--  深色  -->
    <Color x:Key="DarkForegroundColor">#D0D0D0</Color>
    <Color x:Key="DardBackgroundColor">#343434</Color>

    <!--  浅色  -->
    <SolidColorBrush x:Key="Primary">#FFFFFF</SolidColorBrush>
    <SolidColorBrush x:Key="PrimaryForeground">#737478</SolidColorBrush>

    <!--  暗色  -->
    <SolidColorBrush x:Key="Dark">#5B5BFA</SolidColorBrush>
    <SolidColorBrush x:Key="DarkForeground">#FFFFFF</SolidColorBrush>

    <!--  强调  -->
    <SolidColorBrush x:Key="PrimaryAccent">#FFFFFF</SolidColorBrush>
    <SolidColorBrush x:Key="PrimaryAccentBackground">#5B5BFA</SolidColorBrush>

    <!--  默认按钮高度  -->
    <system:Double x:Key="PrimaryButtonHeight">28</system:Double>

</ResourceDictionary>